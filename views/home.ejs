<nav>
    <div class="site-title"><span class="title-emphasis">Simple Shopper</div>
    <div class="list-items">
        <ul class="nav-list">
            <li class="nav-item"><a href="/">Home</a></li>
            <li class="nav-item"><a href="/categories">Categories</a></li>
            <li class="nav-item"><a href="#help">Help</a></li>
            <li class="nav-item"><a href="#cart"><i class="lni lni-cart"></i></a></li>
        </ul>
    </div>
</nav>

<div class="main">
    <div class="cover-container">
        <img src="/photos/cover-photo.jpeg" class="cover-photo" alt="">
        <div class="items1-list">
            <div class="item1">
                <img src="/photos/beauty-cover.jpg" class="category-link" name="Beauty" alt="">
                <p>Beauty Products</p>
            </div>
            <div class="item1">
                <img src="/photos/electronics-cover.png" class="category-link" name="Electronics" alt="">
                <p>Electronics</p>
            </div>
            <div class="item1">
                <img src="/photos/books-cover.jpg" class="category-link" name="Books" alt="">
                <p>Books</p>
            </div>
            <div class="item1">
                <img src="/photos/mobile-cover.jpg" class="category-link" name="Mobile" alt="">
                <p>Smart Phones</p>
            </div>
        </div>
    </div>

    <div class="items2-container">
        <h3>Check out some amazing products</h3>
        <div class="items2-list">
            <div class="item2">
                <img src="<%= products[0]['image'] %>" class="product-link" name="<%= products[0]['id'] %>" alt="">
                <p>
                    <%= products[0]['name'] %>
                </p>
            </div>
            <div class="item2">
                <img src="<%= products[1]['image'] %>" class="product-link" name="<%= products[1]['id'] %>" alt="">
                <p>
                    <%= products[1]['name'] %>
                </p>
            </div>
            <div class="item2">
                <img src="<%= products[2]['image'] %>" class="product-link" name="<%= products[2]['id'] %>" alt="">
                <p>
                    <%= products[2]['name'] %>
                </p>
            </div>
            <div class="item2">
                <img src="<%= products[3]['image'] %>" class="product-link" name="<%= products[3]['id'] %>" alt="">
                <p>
                    <%= products[3]['name'] %>
                </p>
            </div>
            <div class="item2">
                <img src="<%= products[4]['image'] %>" class="product-link" name="<%= products[4]['id'] %>" alt="">
                <p>
                    <%= products[4]['name'] %>
                </p>
            </div>
            <div class="item2">
                <img src="<%= products[5]['image'] %>" class="product-link" name="<%= products[5]['id'] %>" alt="">
                <p>
                    <%= products[5]['name'] %>
                </p>
            </div>
        </div>
    </div>

    <div class="items3-container">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img id="abs" class="d-block w-100 product-link" name="<%= products[6]['id'] %>" src="<%= products[6]['image'] %>" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 product-link" name="<%= products[7]['id'] %>" src="<%= products[7]['image'] %>" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 product-link" name="<%= products[8]['id'] %>" src="<%= products[8]['image'] %>" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 product-link" name="<%= products[9]['id'] %>" src="<%= products[9]['image'] %>" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    </div>

    </div>

    <form action="/" method="post" id="home-form">
        <input type="hidden" name="type" id="form-type">
        <input type="hidden" name="value" id="form-value">
    </form>


    <footer>
        <div>
            <h3 class="contact-us">Contact us </h3>
            <a class="footer-link" href="#">Facebook</a><br>
            <a class="footer-link" href="#">Instagram</a><br>
            <a class="footer-link" href="#">Github</a>
        </div>
        <div>
            <h3 class="about-us">Get to know us </h3>
            <a class="footer-link" href="#">About us</a><br>
            <a class="footer-link" href="#">About website</a>
        </div>
    </footer>

    <script src="/js/home_events.js"></script>
