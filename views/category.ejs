<div class="outer-container">
    <h2>
        <%= categ %>
    </h2>
    <div class="categ-container">
        <div class="product-container">
            <img class="product-link" src="<%= categories[0]['image'] %>" name="<%= categories[0]['id'] %>">
            <h6>
                <b>Title : </b>
                <%= categories[0]['name']  %>
            </h6>
            <h6>
                <b>Price : </b>
                <%= categories[0]['price'] %>
            </h6>
            <h6>
                <% if (categ == 'Books') { %>
                    <b>Author : </b>
                    <% } else { %>
                        <b>Brand : </b>
                        <% } %>
                            <%= categories[0]['brand']  %>
            </h6>
            <h6><b>Rating : </b>
                <%= categories[0]['rating']  %>
            </h6>
        </div>
        <div class="product-container">
            <img class="product-link" src="<%= categories[1]['image'] %>" name="<%= categories[1]['id'] %>">
            <h6>
                <b>Title : </b>
                <%= categories[1]['name']  %>
            </h6>
            <h6>
                <b>Price : </b>
                <%= categories[1]['price'] %>
            </h6>
            <h6>
                <% if (categ == 'Books') { %>
                    <b>Author : </b>
                    <% } else { %>
                        <b>Brand : </b>
                        <% } %>
                            <%= categories[1]['brand']  %>
            </h6>
            <h6><b>Rating : </b>
                <%= categories[1]['rating']  %>
            </h6>
        </div>
        <% if (categories.length > 2) { %>
            <div class="product-container">
                <img class="product-link" src="<%= categories[2]['image'] %>" name="<%= categories[2]['id'] %>">
                <h6>
                    <b>Title : </b>
                    <%= categories[2]['name']  %>
                </h6>
                <h6>
                    <b>Price : </b>
                    <%= categories[2]['price'] %>
                </h6>
                <h6>
                    <% if (categ == 'Books') { %>
                        <b>Author : </b>
                        <% } else { %>
                            <b>Brand : </b>
                            <% } %>
                                <%= categories[2]['brand']  %>
                </h6>
                <h6><b>Rating : </b>
                    <%= categories[2]['rating']  %>
                </h6>
            </div>

            <% } %>
                <% if (categories.length > 3) { %>
                    <div class="product-container">
                        <img class="product-link" src="<%= categories[3]['image'] %>" name="<%= categories[3]['id'] %>">
                        <h6>
                            <b>Title : </b>
                            <%= categories[3]['name']  %>
                        </h6>
                        <h6>
                            <b>Price : </b>
                            <%= categories[3]['price'] %>
                        </h6>
                        <h6>
                            <% if (categ == 'Books') { %>
                                <b>Author : </b>
                                <% } else { %>
                                    <b>Brand : </b>
                                    <% } %>
                                        <%= categories[3]['brand']  %>
                        </h6>
                        <h6><b>Rating : </b>
                            <%= categories[3]['rating']  %>
                        </h6>
                    </div>

                    <% } %>
                        <% if (categories.length > 4) { %>
                            <div class="product-container">
                                <img class="product-link" src="<%= categories[4]['image'] %>" name="<%= categories[4]['id'] %>">
                                <h6>
                                    <b>Title : </b>
                                    <%= categories[4]['name']  %>
                                </h6>
                                <h6>
                                    <b>Price : </b>
                                    <%= categories[4]['price'] %>
                                </h6>
                                <h6>
                                    <% if (categ == 'Books') { %>
                                        <b>Author : </b>
                                        <% } else { %>
                                            <b>Brand : </b>
