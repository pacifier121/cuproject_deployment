                                    <div class="product-container">
                                        <img class="product-link" src="<%= categories[5]['image'] %>" name="<%= categories[5]['id'] %>">
                                        <h6>
                                            <b>Title : </b>
                                            <%= categories[5]['name']  %>
                                        </h6>
                                        <h6>
                                            <b>Price : </b>
                                            <%= categories[5]['price'] %>
                                        </h6>
                                        <h6>
                                            <% if (categ == 'Books') { %>
                                                <b>Author : </b>
                                                <% } else { %>
                                                    <b>Brand : </b>
                                                    <% } %>
